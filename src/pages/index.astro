---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import { getCollection } from "astro:content";
import createSlug from "../lib/createSlug"

const posts = (await getCollection("blog")).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const last_posts = posts.slice(0, 3);

const featuredProjects = [
  {
    title: "VPAX & VoyanceX (Medical Imaging Ecosystem)",
    img: "/projects/Voyance.png",
    desc:
      "Cloud-native PACS with microservices, BFF frontend, and C# acquisition software. Scaled to 150x peak traffic with caching, RBAC, and seamless Dropbox/OneDrive integrations.",
    url: "mailto:ahmed.shemais98@gmail.com",
    badge: "Flagship",
  },
  {
    title: "AI-Powered Email Client",
    img: "/projects/post_img.png",
    desc:
      "Provider-agnostic NestJS backend with RAG to chat with your inbox, thread summaries, and AI-assisted replies across Gmail and Outlook.",
    url: "mailto:ahmed.shemais98@gmail.com",
    badge: "AI",
  },
  {
    title: "Microservices Ticketing Platform",
    img: "/projects/post_img.png",
    desc:
      "Event-driven e-commerce exchange using NATS, Kubernetes, Stripe, and full CI/CD. Built for reliability and multi-service observability.",
    url: "mailto:ahmed.shemais98@gmail.com",
    badge: "Backend",
  },
];
---

<BaseLayout sideBarActiveItemID="home">
  <div class="pb-12 mt-5">
    <div class="text-xl py-1">Hey there ðŸ‘‹</div>
    <div class="text-5xl font-bold">I'm Ahmed Shemais</div>
    <div class="text-3xl py-3 font-bold">Software Engineer | Cloud, AI, Full-stack</div>
    <div class="py-2">
      <text class="text-lg">
        Versatile engineer with 3+ years building scalable microservices, performant frontends, and AI-enabled products. I
        love taking products from idea to production with secure, observable architectures.
      </text>
    </div>
    <div class="mt-8">
      <a class="btn" href="mailto:ahmed.shemais98@gmail.com" target="_blank">Email me</a>
      <a href="https://www.linkedin.com/in/ahmed-shemais-00aa7b11b/" target="_blank" class="btn btn-outline ml-5">
        LinkedIn
      </a>
    </div>
  </div>

  <div>
    <div class="text-3xl w-full font-bold mb-2">Featured projects {"</>"}</div>
  </div>

  {
    featuredProjects.map((project, idx) => (
      <>
        <HorizontalCard
          title={project.title}
          img={project.img}
          desc={project.desc}
          url={project.url}
          badge={project.badge}
          target="_self"
        />
        {idx < featuredProjects.length - 1 && <div class="divider my-0"></div>}
      </>
    ))
  }

  <div>
    <div class="text-3xl w-full font-bold mb-5 mt-10">Latest from blog</div>
  </div>

  {
    last_posts.map((post) => (
      <>
        <HorizontalCard
          title={post.data.title}
          img={post.data.heroImage}
          desc={post.data.description}
          url={"/blog/" + createSlug(post.data.title, post.slug)}
          target="_self"
          badge={post.data.badge}
        />
        <div class="divider my-0" />
      </>
    ))
  }
</BaseLayout>
