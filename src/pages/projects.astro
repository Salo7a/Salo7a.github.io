<BaseLayout title="Projects" sideBarActiveItemID="projects">
  {
    projectSections.map((section) => (
      <div class="mb-10">
        <div class="text-3xl w-full font-bold mb-5">{section.title}</div>
        {section.items.map((project, idx) => (
          <>
            <HorizontalCard
              title={project.title}
              img={project.img}
              desc={project.desc}
              badges={project.badges}
              url={project.demoUrl !== "#" ? project.demoUrl : project.repoUrl}
              target="_blank"
              repoUrl={project.repoUrl}
              demoUrl={project.demoUrl}
              relatedPapers={project.relatedPapers}
              tags={project.tags}
            />
            {idx < section.items.length - 1 && <div class="divider my-0"></div>}
          </>
        ))}
        <div class="divider my-8"></div>
      </div>
    ))
  }
</BaseLayout>
