---

<BaseLayout title="Projects" sideBarActiveItemID="projects">
  {
    projectSections.map((section) => (
      <div class="mb-10">
        <div class="text-3xl w-full font-bold mb-5">{section.title}</div>
        {section.items.map((project, idx) => (
          <>
            <HorizontalCard
              title={project.title}
              img={project.img}
              desc={project.desc}
              badges={project.badges}
              url={project.demoUrl !== "#" ? project.demoUrl : project.repoUrl}
              target="_blank"
            />

            <div class="mt-2 mb-4 ml-4">
              <div class="flex flex-wrap gap-2 mb-2">
                {project.tags && project.tags.map((tag) => (
                  <span class="badge badge-outline opacity-80">{tag}</span>
                ))}
  </div>

              <div class="flex gap-3 items-center text-sm">
                {project.repoUrl !== "#" && (
                  <a href={project.repoUrl} target="_blank" class="btn btn-ghost btn-xs gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" style="fill: currentColor;"><path d="M9.04 7.913 12 9.78l2.96-1.868a1 1 0 1 1 1.08 1.675L12.54 11.22l3.5 2.207a1 1 0 0 1-1.08 1.675L12 13.234l-2.96 1.868a1 1 0 1 1-1.08-1.675l3.5-2.207-3.5-2.208a1 1 0 0 1 1.08-1.675Z"></path><path fill-rule="evenodd" d="M12 2c-2.288 0-4.042 0-5.37.123-1.346.124-2.39.38-3.25.982a5 5 0 0 0-1.275 1.275c-.602.86-.858 1.904-.982 3.25C1 8.958 1 10.712 1 13c0 2.288 0 4.042.123 5.37.124 1.346.38 2.39.982 3.25a5 5 0 0 0 1.275 1.275c.86.602 1.904.858 3.25.982C7.958 24 9.712 24 12 24c2.288 0 4.042 0 5.37-.123 1.346-.124 2.39-.38 3.25-.982a5 5 0 0 0 1.275-1.275c.602-.86.858-1.904.982-3.25C23 17.042 23 15.288 23 13c0-2.288 0-4.042-.123-5.37-.124-1.346-.38-2.39-.982-3.25a5 5 0 0 0-1.275-1.275c-.86-.602-1.904-.858-3.25-.982C16.042 2 14.288 2 12 2Zm-4.37 1.617C7.957 3.496 9.593 3.5 12 3.5c2.406 0 4.043-.004 5.37.117 1.304.12 1.955.349 2.395.658.36.253.652.584.875.975.309.54.538 1.291.658 2.595.12 1.327.117 2.963.117 5.359 0 2.397.003 4.033-.117 5.36-.12 1.304-.35 2.055-.658 2.595a3 3 0 0 1-.875.875c-.44.31-1.09.538-2.395.658-1.326.12-2.963.117-5.37.117-2.407 0-4.043.003-5.37-.117-1.304-.12-1.955-.35-2.395-.658a3 3 0 0 1-.875-.875c-.31-.54-.538-1.291-.658-2.595C2.5 17.033 2.5 15.397 2.5 13c0-2.396.003-4.033.117-5.36.12-1.304.35-2.055.658-2.595.223-.391.515-.722.875-.975.44-.309 1.09-.538 2.395-.658Z" clip-rule="evenodd"></path></svg>
                    Code
                  </a>
                )}
                {project.demoUrl !== "#" && (
                  <a href={project.demoUrl} target="_blank" class="btn btn-ghost btn-xs gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" style="fill: currentColor;"><path d="m13.913 4.022 6.065 6.065a1.5 1.5 0 0 1 0 2.121l-6.065 6.065A1.5 1.5 0 0 1 11.5 17.915l2.94-2.94H5.5a1.5 1.5 0 0 1 0-3h8.94l-2.94-2.94a1.5 1.5 0 0 1 2.121-2.121Z"></path></svg>
                    Demo
                  </a>
                )}
              </div>

              {project.relatedPapers && project.relatedPapers.length > 0 && (
                <div class="mt-2 text-sm">
                  <div class="font-semibold">Related papers</div>
                  <ul class="list-disc ml-4">
                    {project.relatedPapers.map((paper) => (
                      <li>
                        <a href={paper.url} target="_blank" class="link link-primary flex items-center gap-1">
                          <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" style="fill: currentColor;"><path d="M19 21H5a2 2 0 0 1-2-2V4.993C3 3.893 3.898 3 4.99 3H8v2H5v14h14v-3h2v3a2 2 0 0 1-2 2ZM13 5h4.586l-7.607 7.607 1.414 1.414L19 6.414V11h2V3h-8v2Z"></path></svg>
                          {paper.label}
                        </a>
                      </li>
                    ))}
                  </ul>
                </div>
              )}
